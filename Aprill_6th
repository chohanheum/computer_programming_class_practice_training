#include <stdio.h>
#pragma warning (disable : 4996)

int main()
{
    int h;
    scanf("%d", &h);
    
    for (int i = 0; i < h; i++)
    {
        for (int j = h - 1; j > i; j--)
        {
            printf(" ");
        }
        for (int k = 0; k < i + 1; k++)
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
